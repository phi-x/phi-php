#!/usr/bin/env php
<?php

if (php_sapi_name() !== 'cli') {
    exit;
}

$loaded = false;

foreach (['../../..', '..'] as $dir) {
    if (file_exists($file = __DIR__."/$dir/vendor/autoload.php")) {
        include $file;
        $loaded = true;
        break;
    }
}

if (! $loaded) {
    fwrite(STDERR, 'Unable to find file `autoload.php`.'.PHP_EOL);
    fwrite(STDERR, 'Make sure you have run `composer install`.'.PHP_EOL);
    exit(1);
}

$phi = new Phi\Application(__FILE__, dirname($file, 2));

$phi->run($argv);
